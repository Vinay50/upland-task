<p id="notice"><%= notice %></p>

<div class="product-list">
  <div><h1>Products</h1>
  <%= link_to 'New Product', new_product_path, class: "link-class" %>
  </div>

  <div class= "form-class">
    <%= form_tag(products_path, :method => "get") do %>
      <%= text_field_tag :filter_category, params[:filter_category], :placeholder => "Filter Category" %>
      <%= submit_tag "Filter" %> 
    <% end %>
  </div>

  <table class="product-table">
    <thead>
      <tr>
        <th><%= sortable "name" %></th>
         <th><%= sortable "category" %></th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
    <% if @products.count > 0 %>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

    <% else %>
    <tr>
      <td colspan = "3"> No product to display </td>
    </tr>
    <% end %>  
    </tbody>
  </table>
</div>
<br>
